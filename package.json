{
  "name": "react-with-async-fonts",
  "version": "3.0.1",
  "description": "React HoC to handle async loaded fonts",
  "repository": "https://github.com/sergeybekrin/react-with-async-fonts",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc --module commonjs --outDir ./lib",
    "typings": "tsc --declaration --module system --outFile ./lib/index.js",
    "test": "jest --coverage --config=jest.json --no-cache",
    "coverage": "cat ./coverage/remapped/lcov.info | coveralls",
    "lint": "tslint 'src/**/*.{ts,tsx}'"
  },
  "files": [
    "lib/",
    "src/",
    "README.md"
  ],
  "keywords": [
    "react",
    "fonts",
    "async",
    "webfont",
    "fontloader",
    "react-fonts"
  ],
  "author": "Sergey Bekrin <sergey@bekrin.me> (http://bekrin.me)",
  "license": "MIT",
  "dependencies": {
    "core-js": "^2.4.1",
    "fontfaceobserver": "^2.0.9"
  },
  "peerDependencies": {
    "react": "^15.1.0",
    "react-dom": "^15.1.0"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.41",
    "@types/enzyme": "^2.8.5",
    "@types/jest": "^21.1.0",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^15.5.0",
    "coveralls": "^2.13.1",
    "enzyme": "^2.8.2",
    "jest": "^21.0.0",
    "react": "^15.1.0",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.1.0",
    "react-test-renderer": "^16.0.0",
    "ts-jest": "^21.0.0",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2"
  }
}
