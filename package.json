{
  "name": "react-with-async-fonts",
  "version": "3.0.2",
  "description": "React HoC to handle async loaded fonts",
  "repository": "https://github.com/sergeybekrin/react-with-async-fonts",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc --module commonjs --outDir ./lib",
    "typings": "tsc --declaration --module system --outFile ./lib/index.js",
    "jest": "jest --coverage --no-cache",
    "test": "npm run lint && npm run typings && npm run jest",
    "coverage": "cat ./coverage/remapped/lcov.info | coveralls",
    "lint": "tslint 'src/**/*.{ts,tsx}'"
  },
  "files": [
    "lib/",
    "src/",
    "README.md"
  ],
  "keywords": [
    "react",
    "fonts",
    "async",
    "webfont",
    "fontloader",
    "react-fonts"
  ],
  "author": "Sergey Bekrin <sergey@bekrin.me> (http://bekrin.me)",
  "license": "MIT",
  "dependencies": {
    "fontfaceobserver": "^2.0.13",
    "make-cancelable": "^1.0.0"
  },
  "peerDependencies": {
    "react": "^15.1.0",
    "react-dom": "^15.1.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/react": "^16.0.10",
    "@types/react-dom": "^16.0.1",
    "coveralls": "^3.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "jest": "^21.2.1",
    "react": "^16.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "ts-jest": "^21.1.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ],
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src/.*\\.spec\\.(ts|tsx)$",
    "collectCoverageFrom": [
      "src/helpers.ts",
      "src/index.tsx"
    ]
  }
}
